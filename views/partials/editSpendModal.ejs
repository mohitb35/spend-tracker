<div id="edit-modal">
	<div class="popup-box-wrapper">
		<div class="popup-box-content">
			<div class="close" id="edit-modal-close" data-target="edit-modal">
				<a href="javascript:void(0)">
					<img src="/media/close.svg" alt="close-edit-popup">
				</a>
			</div>
			<p class="popup-message">Edit this spend?</p>
			<section class="edit-item-container">
				<form id="edit-spend-form" action="/spend/null?_method=PUT" method="POST">
					<div class="form-field inline">
						<label for="edit-item-name">Name *</label>
						<div>
							<input type="text" name="item-name" id="edit-item-name" placeholder="What did you buy?">
							<span class="error-message hidden">Test</span>
						</div>
					</div>
					<div class="form-field inline">
						<label for="edit-item-date">Date *</label>
						<div>
							<input type="date" name="date" id="edit-item-date" placeholder="Select a date" min="">
							<span class="error-message hidden">Test</span>
						</div>
					</div>
					<div class="form-field inline">
						<label for="edit-item-amount">Amount *</label>
						<div>
							<input type="number" name="amount" id="edit-item-amount" placeholder="Enter amount">
							<span class="error-message hidden">Test</span>
						</div>
					</div>
					<div class="form-field inline">
						<label for="edit-item-category">Category *</label>
						<div class="selector">
							<select name="category" id="edit-item-category">
								<option value = "" selected disabled hidden> --- Select --- </option>
								<% categories.forEach(category => { %>
									<option value="<%= category.id %>"><%= category.name %></option>
								<% }); %>
							</select>
							<span class="error-message hidden"></span>
						</div>
						
					</div>
					<div class="form-field inline">
						<label for="edit-item-sub-category">Sub-Category *</label>
						<div class="selector">
							<select name="sub-category" id="edit-item-sub-category">
								<option value = "" selected disabled hidden> --- Select --- </option>
							</select>
							<span class="error-message hidden"></span>
						</div>
					</div>
				</form>
			</section>
			<button form="edit-spend-form" type="submit" class="button small">Save</button>
		</div>
	</div>
</div>